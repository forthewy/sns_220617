<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.like.dao.LikeDAO">
 	<select id="selectLikeByPostIdAndUserId" parameterType="map" resultType="int">
	 	SELECT
	 		COUNT(*)
	 	FROM
	 		`like`
 		WHERE
 			`postId` = #{postId}
 			AND
 			`userId` = #{userId}
 	</select>
 	<delete id="deleteLikeByPostIdAndUserId" parameterType="map">
 		DELETE FROM
 			`like`
 		WHERE
 			`postId` = #{postId}
 			AND
 			`userId` = #{userId}
 	</delete>
 	<insert id="insertLikeByPostIdAndUserId" parameterType="map">
 		INSERT INTO
 			`like`
 		(
 			`postId`
			,`userId`
			,`createdAt`
 		)
 		VALUES
 		(
 			#{postId}
 			, #{userId}
 			, NOW()
 		)
 	</insert>
 </mapper>