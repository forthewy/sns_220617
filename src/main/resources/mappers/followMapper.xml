<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.follow.dao.FollowDAO">
 	<insert id="insertFollow" parameterType="map">
 		INSERT INTO
 			`follow`
 		(
 			`userId_follower`
			,`userId_followed`
			,`createdAt`
 		)
 		VALUES
 		(
 			#{followerUserId}
 			,#{followedUserId}
 			,NOW()
 		)
 	</insert>
 	<delete id="deleteFollow" parameterType="map">
 		DELETE FROM
 			`follow`
 		WHERE
 			`userId_follower` = #{followerUserId}
 			AND
 			`userId_followed` = #{followedUserId}
 	</delete>
 	<select id="selectFollowCountByFollowerUserIdOrFollowedUserId" parameterType="map" resultType="int">
 		SELECT
 			COUNT(*)
 		FROM
 			`follow`
 		<choose>
	 		<when test="followerUserId != null and followedUserId != null"> <!--  팔로우 여부 확인 -->
	 		WHERE `userId_follower` = #{followerUserId}
	 			AND `userId_followed` = #{followedUserId}
	 		</when>
	 		<when test="followedUserId != null"> <!-- 홈유저를 팔로우 한 사람을 찾아야할때 -->
	 		WHERE `userId_followed` = #{followedUserId}
	 		</when>
	 		<when test="followerUserId != null"> <!--  홈유저가 팔로우한 사람을 찾을때 -->
		 	 WHERE `userId_follower` = #{followerUserId}
		 	</when>
 		</choose>
 	</select>
 	<select id="selectFollowUserIdListByFollowedUserId" parameterType="Integer" resultType="int">
 		SELECT
 			`userId_follower`
 		FROM
 			`follow`
 		WHERE
 			`userId_follower` = #{followedUserId}
 	</select>
 	<select id="selectFolloweeUserIdByFollowerUserId" parameterType="int" resultType="int">
 		SELECT
 			`userId_followed`
 		FROM
 			`follow`
		WHERE `userId_follower` = #{followerUserId}
 	</select>
 	<select id="selectFollowerUserIdByFollowerUserId" parameterType="int" resultType="int">
 		SELECT
 			`userId_follower`
 		FROM
 			`follow`
		WHERE `userId_followed` = #{followedUserId}
 	</select>
 </mapper>