<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.sns.message.dao.MessageDAO">
 	<insert id="insertMessage" parameterType="map">
 		INSERT INTO
 			`message`
 		(
 			`userIdSender`
			,`userIdReceiver`
			,`content`
			,`createdAt`
 		)
 		VALUES
 		(
	 		#{userIdSender}
	 		,#{userIdReceiver}
	 		,#{content}
	 		, NOW()
 		)
 	</insert>
 	<!--  보낸 메세지. 받은 메세지 모두 가져와야 한다. -->
 	 <select id="selectMessageListBySenderIdAndReceiverId" parameterType="map" resultType="com.sns.message.model.Message">
 		SELECT
 			`id`
 			,`userIdSender`
			,`userIdReceiver`
			,`content`
			,`createdAt`
		FROM
			`message`
		WHERE
			(`userIdSender` = #{userIdSender}
			AND `userIdReceiver` = #{userIdReceiver})
			OR
			(`userIdSender` = #{userIdReceiver}
			AND `userIdReceiver` = #{userIdSender})
		ORDER BY
			`id`
 	</select>
 	<select id="selectMessageUserIdListByUserId" parameterType="int">
 		SELECT
 			`userIdSender`
			,`userIdReceiver`
		FROM
			`message`	
		WHERE
			`userIdSender` = #{userId}
			OR
			`userIdReceiver` = #{userIdSender})
		DISTINCT
 	</select>
 </mapper>